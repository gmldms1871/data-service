{
  "java.compile.nullAnalysis.mode": "automatic",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true, // 저장 시 자동 포맷팅 활성화
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // ESLint가 특정 파일 타입에 대해 포맷팅을 시도하지 않도록 설정
  "eslint.format.enable": false // 또는 필요한 경우 true로 두고 아래 ESLint-Prettier 통합을 따릅니다.
                                // 하지만 보통 Prettier 단독으로 포맷팅하는 것이 간단합니다.
}